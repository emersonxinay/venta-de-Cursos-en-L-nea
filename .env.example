# ================================
# CONFIGURACIÓN DE ENTORNO
# ================================

# Entorno de la aplicación (development/production)
FLASK_ENV=production
FLASK_DEBUG=False

# ================================
# BASE DE DATOS
# ================================

# Opción 1: URL completa de base de datos (recomendado para Digital Ocean)
DATABASE_URL=postgresql://usuario:contraseña@host:puerto/db_venta_cursos

# Opción 2: Variables individuales (alternativa)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=db_venta_cursos
DB_USER=postgres
DB_PASSWORD=tu_contraseña_segura

# ================================
# SEGURIDAD
# ================================

# Clave secreta para sesiones (GENERAR UNA NUEVA)
SECRET_KEY=tu_clave_secreta_muy_larga_y_aleatoria_para_produccion

# ================================
# ARCHIVOS
# ================================

# Directorio de uploads
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_PATH=16777216

# ================================
# STRIPE (PAGOS)
# ================================

# Producción
STRIPE_API_KEY_LIVE=sk_live_...
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_...

# Sandbox/Desarrollo  
STRIPE_API_KEY_SANDBOX=sk_test_...
STRIPE_PUBLISHABLE_KEY_SANDBOX=pk_test_...

# ================================
# PAYPAL (PAGOS)
# ================================

# Producción
PAYPAL_CLIENT_ID_LIVE=tu_client_id_live
PAYPAL_CLIENT_SECRET_LIVE=tu_client_secret_live

# Sandbox/Desarrollo
PAYPAL_CLIENT_ID_SANDBOX=tu_client_id_sandbox
PAYPAL_CLIENT_SECRET_SANDBOX=tu_client_secret_sandbox

# ================================
# EMAIL (OPCIONAL)
# ================================

# Para notificaciones de compras
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_contraseña_app

# ================================
# DIGITAL OCEAN SPACES (OPCIONAL)
# ================================

# Para almacenamiento de archivos en producción
DO_SPACES_KEY=tu_spaces_key
DO_SPACES_SECRET=tu_spaces_secret
DO_SPACES_BUCKET=tu_bucket_name
DO_SPACES_REGION=nyc3