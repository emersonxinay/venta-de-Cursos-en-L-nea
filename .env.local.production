# ================================
# CONFIGURACIÓN LOCAL CON BD DE PRODUCCIÓN
# ================================

# Entorno de producción pero ejecutando localmente
FLASK_ENV=production
FLASK_DEBUG=False

# ================================
# BASE DE DATOS - Digital Ocean
# ================================

# SUSTITUYE con tu URL real de Digital Ocean
# Formato: postgresql://usuario:contraseña@host:puerto/db_venta_cursos
DATABASE_URL=postgresql://tu_usuario:tu_contraseña@tu_host_digital_ocean:25060/db_venta_cursos

# ================================
# SEGURIDAD
# ================================

# Genera una clave temporal para testing local
SECRET_KEY=testing_key_change_for_real_production_12345678901234567890

# ================================
# ARCHIVOS (LOCAL)
# ================================

UPLOAD_FOLDER=static/uploads
MAX_CONTENT_PATH=16777216

# ================================
# SERVICIOS DE PAGO (SANDBOX PARA TESTING)
# ================================

# Usar sandbox para testing local
STRIPE_API_KEY_SANDBOX=sk_test_tu_clave_sandbox
STRIPE_PUBLISHABLE_KEY_SANDBOX=pk_test_tu_clave_sandbox

PAYPAL_CLIENT_ID_SANDBOX=tu_client_id_sandbox
PAYPAL_CLIENT_SECRET_SANDBOX=tu_client_secret_sandbox