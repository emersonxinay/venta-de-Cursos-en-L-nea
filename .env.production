# Configuración de Producción para Digital Ocean
# IMPORTANTE: Actualizar estos valores en el servidor

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-production-key-change-this

# Database Configuration (PostgreSQL en Digital Ocean)
DATABASE_URL=postgresql://username:password@localhost/dbname

# Mail Configuration (usando un servicio SMTP como SendGrid, Mailgun, etc.)
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_DEFAULT_SENDER=noreply@tu-dominio.com

# Security Headers
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/var/www/compilandocode/uploads

# Domain Configuration
DOMAIN=https://tu-dominio.com

# Payment Configuration (Stripe/PayPal)
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...

# Analytics (opcional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID