# ================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ================================

# IMPORTANTE: Renombra este archivo a .env en producción
# y completa con tus valores reales

FLASK_ENV=production
FLASK_DEBUG=False

# ================================
# BASE DE DATOS - Digital Ocean
# ================================

# Usar la URL completa que te proporciona Digital Ocean
DATABASE_URL=postgresql://tu_usuario:tu_contraseña@host:puerto/db_venta_cursos

# O usar variables individuales:
# DB_HOST=tu_host_digital_ocean
# DB_PORT=25060
# DB_NAME=db_venta_cursos
# DB_USER=tu_usuario
# DB_PASSWORD=tu_contraseña

# ================================
# SEGURIDAD CRÍTICA
# ================================

# GENERAR UNA NUEVA - NO USAR VALORES POR DEFECTO
SECRET_KEY=CAMBIAR_POR_CLAVE_SEGURA_ALEATORIA_DE_AL_MENOS_32_CARACTERES

# ================================
# ARCHIVOS
# ================================

UPLOAD_FOLDER=/app/static/uploads
MAX_CONTENT_PATH=16777216

# ================================
# PAGOS - SOLO COMPLETAR SI VAS A USAR
# ================================

# Stripe Producción (opcional)
STRIPE_API_KEY_LIVE=
STRIPE_PUBLISHABLE_KEY_LIVE=

# PayPal Producción (opcional)
PAYPAL_CLIENT_ID_LIVE=
PAYPAL_CLIENT_SECRET_LIVE=